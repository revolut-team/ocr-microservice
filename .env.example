# OCR Engine Settings
OCR_LANG=es
OCR_USE_GPU=false
OCR_DET_THRESHOLD=0.3
OCR_DET_BOX_THRESHOLD=0.5
OCR_REC_BATCH_NUM=6
OCR_MAX_TEXT_LENGTH=50
OCR_MIN_CONFIDENCE=0.7

# Image Processing Settings
MAX_IMAGE_SIZE_MB=10
MAX_IMAGE_DIMENSION=4096
OPTIMAL_IMAGE_WIDTH=1500

# Preprocessing Pipeline (comma-separated steps)
# Available steps: resize, exif_fix, grayscale, denoise, perspective_correction, clahe, adaptive_threshold, sharpen
PREPROCESSING_PIPELINE=resize,exif_fix,grayscale,denoise,clahe,adaptive_threshold,sharpen

# CLAHE (Contrast Limited Adaptive Histogram Equalization) Settings
CLAHE_CLIP_LIMIT=2.0
CLAHE_TILE_GRID_SIZE=8

# Denoising Settings
DENOISE_H=10
DENOISE_TEMPLATE_WINDOW_SIZE=7
DENOISE_SEARCH_WINDOW_SIZE=21

# Adaptive Threshold Settings
ADAPTIVE_BLOCK_SIZE=11
ADAPTIVE_C=2

# Server Settings
PORT=8080
WORKERS=2
LOG_LEVEL=info

# CORS Settings (comma-separated origins or *)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_PER_SECOND=10

# Request Timeout (seconds)
REQUEST_TIMEOUT_SECONDS=30

# Gemini Vision API Settings
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
